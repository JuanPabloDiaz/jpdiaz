<section
	data-testid="about"
	id="about"
	class="mt-0 flex flex-col items-center justify-center md:mt-10 lg:flex-row"
>
	<div class="mb-10 flex w-full flex-col items-center justify-center lg:mb-0 lg:w-1/2">
		<SubTitle text="About me" />
	</div>

	<div class="w-full text-justify text-black dark:text-white lg:w-1/2">
		<p class="mb-2">
			{site.aboutMePageDescription}
		</p>
	</div>
</section>
<section
	data-testid="about"
	id="about"
	class="mt-0 flex flex-col items-center justify-center md:mt-10 lg:flex-row"
>
	<div class="mb-10 flex w-full flex-col items-center justify-center lg:mb-0 lg:w-1/2">
		<SubTitle text="What I do" />
	</div>

	<div class="w-full text-justify text-black dark:text-white lg:w-1/2">
		{
			whatImDoing.map((iDo, index) => (
				<p class="mb-2 flex justify-evenly" key={index}>
					{iDo.role}
					<a
						href={iDo.url}
						class={LinkStyle}
						aria-label={iDo.title}
						target="_blank"
						rel="noopener noreferrer"
					>
						{iDo.title}
					</a>
					<a
						href={iDo.repo}
						class="hover:text-orange"
						aria-label={iDo.title}
						title="GitHub Contributors Graph"
						target="_blank"
						rel="noopener noreferrer"
					>
						<GitHubIcon />
					</a>
					â€¢ Since {iDo.date}
				</p>
			))
		}
	</div>
</section>
