---
import juanImage from '@assets/images/juan.jpg';
import { Image } from '@astrojs/image/components';
import CallToAction from '@components/CallToAction.astro';
import About from './About.astro';
---

<section data-testid="hero" id="hero" class="mb-0 mt-0 h-auto text-center md:mb-24 md:mt-24">
	<main class="flex flex-col-reverse items-center justify-center lg:flex-row">
		<div class="my-10 flex flex-col items-center lg:mb-0 lg:w-1/2">
			<div>
				<h1 class="mb-10 font-monospace text-3xl text-black dark:text-white lg:text-5xl">
					Hi! My name is <span class="text-orange">Juan Diaz</span> and I am a Front End Developer based
					in Charlotte, NC.
				</h1>
			</div>
			<div class="mb-10">
				<CallToAction button />
			</div>
		</div>
		<div data-testid="hero-img" class="my-10 flex w-1/2 items-center justify-center">
			<Image
				class="rounded-full opacity-90 shadow-orange/50 duration-75 hover:scale-105 hover:transform hover:opacity-50 hover:shadow-2xl"
				src={juanImage}
				alt="Juan Diaz"
				aspectRatio="4:4"
				format="jpg"
				width={450}
				height={450}
				loading="eager"
				quality={100}
			/>
		</div>
	</main>
	<About />
</section>
