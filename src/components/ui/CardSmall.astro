---
import Tags from '@components/ui/Tags.astro';
import SmallCardButtons from '@components/ui/SmallCardButtons.astro';
import GitHubStars from '@components/ui/GitHubStars.astro';
import TypeScript from '@components/icons/TypeScript.astro';
import GitHubContribution from './GitHubContribution.astro';

interface Props {
	github_url?: string;
	url?: string;
	alt?: string;
	title?: string;
	description?: string;
	tags: string[];
	children?: HTMLElement | HTMLElement[];
}

const {
	github_url = '#',
	url = '#',
	title = 'Project title',
	description = 'Project description',
	tags = ['Tags'],
} = Astro.props;
---

<main class="group w-full p-4 md:w-1/2 lg:w-1/3">
	<section data-testId="card" class="flex h-28 rounded-xl bg-white/90 p-1 shadow-lg">
		<article class="flex w-11/12 flex-grow flex-col p-2">
			<h3 class="text-md h-full text-black group-hover:invisible group-hover:h-0 lg:text-xl">
				{title}
			</h3>
			<p
				class="invisible flex h-0 items-center text-justify text-sm text-black/70 group-hover:visible group-hover:h-full"
			>
				{description}
			</p>
			<div class="flex w-full">
				<div class="h-fit w-fit flex-grow group-hover:invisible group-hover:h-0">
					<Tags tags={tags} />
				</div>
				<div class="h-fit w-fit flex-grow group-hover:invisible group-hover:h-0">
					<GitHubStars github_url={github_url} />
				</div>
				<!-- <TypeScript class="h-8 w-8 group-hover:invisible group-hover:h-0" /> -->
			</div>
		</article>
		<SmallCardButtons url={url} github_url={github_url} />
		<GitHubContribution github_url={github_url} />
	</section>
</main>
