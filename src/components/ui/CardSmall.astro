---
import Tags from '@components/ui/Tags.astro';
import Button from '@components/ui/Button.astro';

import OpenOutline from '@components/icons/OpenOutline.astro';
import GitHubIcon from '@components/icons/GitHubIcon.astro';

interface Props {
	github_url?: string;
	url?: string;
	alt?: string;
	title?: string;
	description?: string;
	tags: string[];
	children?: HTMLElement | HTMLElement[];
}

const {
	github_url = '#',
	url = '#',
	title = 'Project title',
	description = 'Project description',
	tags = ['Tags'],
} = Astro.props;
---

<section class="group w-full p-4 md:w-1/2 lg:w-1/3">
	<article
		data-testId="card"
		class="h-100 flex flex-col rounded-xl bg-white/90 p-3 shadow-lg transition-all duration-300 ease-in-out hover:scale-105 hover:transform group-hover:h-[180px]"
	>
		<a href={url} aria-label="link to project">
			<div class="relative flex items-end overflow-hidden rounded-xl"></div>
		</a>
		<div class="mt-1 flex flex-grow flex-col p-2">
			<h3 class="text-md text-black lg:text-xl">{title}</h3>
			<p
				class="invisible h-0 text-sm text-black/70 transition-all duration-1000 ease-in-out group-hover:visible group-hover:h-full"
			>
				{description}
			</p>
			<div class="flex h-full items-end justify-around p-2">
				<Tags tags={tags} />
				<a
					href={github_url}
					class="rounded-xl bg-orange p-1 px-2 shadow-sm shadow-black transition duration-300 hover:bg-opacity-60 hover:shadow-none"
				>
					<GitHubIcon />
				</a>
				<a
					href={url}
					class="rounded-xl bg-orange p-1 shadow-sm shadow-black transition duration-300 hover:bg-opacity-60 hover:shadow-none"
				>
					<OpenOutline class="h-5 w-5" />
				</a>
			</div>
		</div>
	</article>
</section>
