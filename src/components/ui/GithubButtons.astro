---
import IndicatorCount from '@components/ui/IndicatorCount.astro';
import { getGitHubUserData } from '@utils/github';

const userData = await getGitHubUserData('JuanPabloDiaz');
const repoCount = userData?.repoCount || 0;
---

<!-- <section class="bg-white p-4 text-black dark:bg-orange dark:text-white"> -->
<div class="mr-auto place-self-center lg:col-span-7">
	<IndicatorCount
		text="GitHub Repos"
		count={repoCount || 65}
		href="https://github.com/juanPablodiaz?tab=repositories"
	/>
</div>
