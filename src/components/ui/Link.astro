---
interface Props {
	text: string;
	href: string;
	className?: string;
	arrow?: boolean;
	target?: boolean;
	ariaLabel?: string;
}

const { text, href, className, target, ariaLabel, arrow } = Astro.props;
const targetAttribute = target ? '_blank' : '_self';
// class={`flex py-2 transition duration-300 lg:px-3 ${className} hover:text-orange dark:hover:text-orange`}
---

<a
	href={href}
	target={targetAttribute}
	rel="noopener"
	aria-label={ariaLabel}
	class={`flex py-2 transition duration-300 lg:px-3 text-black hover:text-orange dark:text-white dark:hover:text-orange ${className}`}
>
	{text}
	{
		arrow ? (
			<>
				<svg
					xmlns="http://www.w3.org/2000/svg"
					fill="none"
					viewBox="0 0 24 24"
					stroke-width="1.5"
					stroke="currentColor"
					class="ml-1 h-6 w-6"
				>
					<path
						stroke-linecap="round"
						stroke-linejoin="round"
						d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3"
					/>
				</svg>
			</>
		) : null
	}
</a>
