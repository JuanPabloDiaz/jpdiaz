---
import Link from '@components/ui/Link.astro';

const copyRight = `Copyright © 2023 - ${new Date().getFullYear()}`;
const developer = ` Juan Diaz`;
---

<footer data-testid="footer" class="p-6 text-center text-sm text-black dark:text-white">
	<div class="flex items-center justify-center">
		{copyRight}

		<span class="mx-1 text-orange dark:text-orange">•</span>
		<p class="flex items-center justify-center">
			Developed by
			<Link
				text={developer}
				ariaLabel=`Website developed by ${developer}`
				href="https://github.com/juanpablodiaz"
				className="text-orange dark:text-orange hover:underline hover:underline-orange hover:underline-offset-4 font-bold"
			/>
		</p>
	</div>
</footer>
