---
import { getCollection } from 'astro:content';
import Link from '@components/ui/Link.astro';
import SubTitle from '@components/ui/SubTitle.astro';
import GithubButtons from '@components/ui/GithubButtons.astro';
import Card from '@components/projects/Card.astro';
import { getGitHubRepoData } from '@utils/github';

// Import Swiper styles
import 'swiper/css';
import 'swiper/css/pagination';
import 'swiper/css/navigation';

const projects = await getCollection('projects', ({ data }) => {
	return !data.inProgress;
});

// Fetch GitHub data for each project
interface ProjectWithGitHub {
	data: {
		link: string;
		title: string;
		description: string;
		img_alt: string;
		tags: string[];
		github_link: string;
		image_path: string;
	};
	githubData: Awaited<ReturnType<typeof getGitHubRepoData>>;
}

const projectsWithGitHubData = await Promise.all(
	projects.map(async (project): Promise<ProjectWithGitHub> => {
		let githubData = null;
		if (project.data.github_link && project.data.github_link !== '#') {
			githubData = await getGitHubRepoData(project.data.github_link);
		}
		return { ...project, githubData } as ProjectWithGitHub;
	})
);
---

<!-- the div below is used to scroll to this section and place the navbar in this h-10 div otherwise the navbar will overlap the section -->
<div class="h-10" id="projects"></div>

<section
	data-testid="projects"
	class="mb-10 flex flex-col items-center justify-center md:mb-0 md:h-screen lg:h-auto"
>
	<SubTitle text="Projects" />

	<div class="projects-swiper-container relative w-full">
		<div class="swiper projects-swiper">
			<div class="swiper-wrapper">
				{
					projectsWithGitHubData.map((project) => (
						<div class="swiper-slide">
							<Card
								url={project.data.link}
								title={project.data.title}
								alt={project.data.img_alt}
								github_url={project.data.github_link}
								images_path={project.data.image_path}
								tags={project.data.tags}
								description={project.data.description}
								lastUpdate={project.githubData?.lastUpdate}
								createdOn={project.githubData?.createdOn}
								size={project.githubData?.size}
								languages={project.githubData?.languages}
								forks={project.githubData?.forks}
								openIssues={project.githubData?.openIssues}
								license={project.githubData?.license}
							/>
						</div>
					))
				}
			</div>
			<!-- Custom navigation buttons -->
			<div class="swiper-button-prev custom-nav-btn custom-prev-btn" aria-label="Previous slide">
			</div>
			<div class="swiper-button-next custom-nav-btn custom-next-btn" aria-label="Next slide"></div>
			<!-- Add pagination -->
			<div class="swiper-pagination"></div>
		</div>
	</div>

	<div class="mt-8">
		<Link text="View more projects" ariaLabel="View more projects" href="./more-projects" arrow />
	</div>
	<div class="my-10">
		<GithubButtons />
	</div>
</section>

<script>
	import Swiper from 'swiper';
	import { Pagination, Navigation, Autoplay } from 'swiper/modules';
	window.addEventListener('DOMContentLoaded', () => {
		// Prevent double init in Astro navigation
		if (window.__projectsSwiper) return;
		window.__projectsSwiper = true;
		const projectsSwiper = new Swiper('.projects-swiper', {
			modules: [Pagination, Navigation, Autoplay],
			slidesPerView: 1,
			spaceBetween: 20,
			centeredSlides: false,
			loop: true,
			grabCursor: true,
			pagination: {
				el: '.swiper-pagination',
				clickable: true,
				dynamicBullets: false,
			},
			navigation: {
				nextEl: '.swiper-button-next',
				prevEl: '.swiper-button-prev',
			},
			autoplay: {
				delay: 5000,
				disableOnInteraction: false,
				pauseOnMouseEnter: true,
			},
			breakpoints: {
				// when window width is >= 640px
				640: {
					slidesPerView: 1,
					spaceBetween: 20,
				},
				// when window width is >= 768px
				768: {
					slidesPerView: 2,
					spaceBetween: 30,
				},
				// when window width is >= 1024px
				1024: {
					slidesPerView: 3,
					spaceBetween: 40,
				},
			},
			effect: 'slide',
			speed: 800,
			watchSlidesProgress: true,
		});
		// Clean up on Astro navigation
		document.addEventListener('astro:before-swap', () => {
			window.__projectsSwiper = false;
			if (projectsSwiper && typeof projectsSwiper.destroy === 'function') {
				projectsSwiper.destroy(true, true);
			}
		});
	});
</script>

<style>
	/* Custom styles for Swiper */
	.projects-swiper-container {
		padding: 0 25px;
		max-width: 1400px;
		margin: 0 auto;
		position: relative;
	}

	.swiper {
		width: 100%;
		padding-bottom: 60px;
		/* overflow: visible; */
	}

	.swiper-slide {
		height: auto;
		display: flex;
		justify-content: center;
	}

	/* Style pagination bullets - smaller, cleaner bullets */
	:global(.swiper-pagination-bullet) {
		background: theme('colors.orange', #ff5733);
		opacity: 0.5;
		width: 8px;
		height: 8px;
		margin: 0 6px;
		/* Fixed size for better consistency */
		transition: all 0.3s ease;
	}

	:global(.swiper-pagination-bullet-active) {
		opacity: 1;
		width: 8px; /* Keep the same width for a more consistent look */
		height: 8px;
		/* We can add a little transform instead of changing dimensions */
		transform: scale(1.2);
	}

	/* Custom navigation buttons */
	:global(.custom-nav-btn) {
		position: absolute;
		top: 50%;
		width: 35px;
		height: 35px;
		border-radius: 50%;
		background-color: theme('colors.orange', #ff5733);
		color: white;
		display: flex;
		align-items: center;
		justify-content: center;
		z-index: 10;
		cursor: pointer;
		box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
		transition: all 0.3s ease;
	}

	:global(.custom-nav-btn:hover) {
		background-color: #ff7f50;
		transform: scale(1.1);
	}

	:global(.custom-prev-btn) {
		left: -10px;
	}

	:global(.custom-next-btn) {
		right: -10px;
	}

	:global(.swiper-button-next:after),
	:global(.swiper-button-prev:after) {
		font-size: 1rem;
		font-weight: bold;
	}

	/* Style pagination bullets */
	:global(.swiper-pagination-bullet) {
		background: theme('colors.orange', #ff5733);
		opacity: 0.5;
		width: 10px;
		height: 10px;
		transition: all 0.3s ease;
	}

	:global(.swiper-pagination-bullet-active) {
		opacity: 1;
		width: 20px;
		border-radius: 5px;
	}

	/* Responsiveness adjustments */
	@media (max-width: 768px) {
		:global(.custom-nav-btn) {
			width: 35px;
			height: 35px;
		}

		:global(.custom-prev-btn) {
			left: -5px;
		}

		:global(.custom-next-btn) {
			right: -5px;
		}
	}

	/* Style navigation arrows - Enhanced version */
	:global(.swiper-button-next),
	:global(.swiper-button-prev) {
		background-color: theme('colors.orange', #ff5733);
		color: white;
		width: 40px;
		height: 40px;
		border-radius: 50%;
		opacity: 0.8;
		transition: all 0.3s ease;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
		/* Move buttons inward so they don't touch the card edges */
		margin: 0 10px;
	}

	:global(.swiper-button-next:hover),
	:global(.swiper-button-prev:hover) {
		opacity: 1;
		transform: scale(1.1);
		box-shadow: 0 6px 8px rgba(0, 0, 0, 0.15);
	}

	:global(.swiper-button-next:after),
	:global(.swiper-button-prev:after) {
		font-size: 1.2rem;
		font-weight: bold;
	}

	/* Position the navigation buttons outside the slides */
	:global(.swiper-button-next) {
		right: 10px;
	}

	:global(.swiper-button-prev) {
		left: 10px;
	}

	/* Responsiveness adjustments */
	@media (min-width: 1024px) {
		:global(.swiper-button-next) {
			right: -10px;
		}

		:global(.swiper-button-prev) {
			left: -10px;
		}
	}

	@media (max-width: 640px) {
		:global(.swiper-button-next),
		:global(.swiper-button-prev) {
			display: flex;
			width: 30px;
			height: 30px;
		}

		:global(.swiper-button-next:after),
		:global(.swiper-button-prev:after) {
			font-size: 0.8rem;
		}
	}
</style>
