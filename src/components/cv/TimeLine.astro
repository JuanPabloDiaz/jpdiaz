---
const { title, subtitle, comments } = Astro.props;
---

<style>
	div:last-child .education__time > .education__line {
		display: none;
	}
</style>

<div class="flex">
	<div class="education__time">
		<span class="mt-1 block h-4 w-4 rounded-full bg-orange"></span><!-- punto negro -->
		<span class="education__line block h-full w-[2px] translate-x-[7px] bg-orange"
		></span><!-- linea -->
	</div>
	<div class="experience__data bd-grid px-5">
		<h3 class="mb-1 font-semibold">{title}</h3>
		<p class="text-sm font-light text-orange">{comments}</p>
		<span class="text-sm font-light">{subtitle}</span>
		<p class="my-2 text-justify">
			<slot />
		</p>
	</div>
</div>
