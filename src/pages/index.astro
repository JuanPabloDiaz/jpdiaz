---
import Layout from '@layouts/Layout.astro';
import Hero from '@components/Hero.astro';
import Projects from '@components/projects/Projects.astro';
import OpenSource from '@components/OpenSource.astro';
import Contact from '@components/Contact.astro';
import Navbar from '@components/Navbar.astro';
import TestimonialsHighlight from '@components/TestimonialsHighlight.astro';
import { homePageMenu } from '@src/consts';
import { getPageMetadata } from '@data/pageMetadata';

const metadata = getPageMetadata('home');
---

<Layout
	metaTitle={metadata.title}
	metaDescription={metadata.description}
	pageKeywords={metadata.keywords}
	ogImage={metadata.ogImage}
>
	<main>
		<Navbar menu={homePageMenu} button="Resume" />
		<Hero />
		<Projects />
		<OpenSource />
		<TestimonialsHighlight />
		<Contact />
	</main>
</Layout>
