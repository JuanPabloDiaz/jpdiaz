---
import Layout from '@layouts/Layout.astro';
import TimeLineElement from '../components/cv/TimeLine.astro';
import Icon from 'astro-icon';
import Button from '@components/ui/Button.astro';
import OpenOutline from '@components/icons/OpenOutline.astro';
const PDF = './files/2024-FrontEndCV.pdf';
const LinkStyle =
	'hover:text-black dark:hover:text-white text-orange transition duration-300 dark:text-orange hover:underline hover:underline-offset-4';
---

<!-- Source code: https://github.com/manuelernestog/astrofy -->
<Layout title="Juan Diaz | Resume" sideBarActiveItemID="cv">
	<main class="text-black dark:text-white">
		<section>
			<div class="mb-5">
				<div class="w-full text-3xl font-bold">Profile</div>
			</div>

			<div class="mb-10 text-justify">
				Bilingual IT professional with excellent customer service skills. I am seeking a front-end
				position in a structured and nurturing company that allows for professional and personal
				growth and development. I value discipline, loyalty, reliability, self-motivation, and
				analytical thinking above all else.
			</div>
		</section>

		<section>
			<div class="mb-5">
				<div class="w-full text-3xl font-bold">Skills</div>
			</div>

			<ul class="mx-6 mb-5 list-disc columns-2 md:columns-5">
				<li>React</li>
				<li>Next.js</li>
				<li>JavaScript</li>
				<li>TypeScript</li>
				<li>Tailwind CSS</li>
				<li>Git</li>
				<li>HTML</li>
				<li>CSS</li>
			</ul>
		</section>

		<section>
			<!-- <div class="mb-5">
	<div class="w-full text-3xl font-bold">Posts</div>
</div>

<ul class="mx-6 mb-10 grid list-disc gap-2">
	<li>
