---
import Layout from '@layouts/Layout.astro';
import Navbar from '@components/Navbar.astro';
import LangSwitch from '@components/ui/LangSwitch.astro';
import SubTitle from '@components/ui/SubTitle.astro';
import { site } from '@src/consts';
import { getLangFromUrl, useTranslations } from '@i18n/utils';
import RssFeedDisplay from '@components/RssFeedDisplay.astro';

const lang = 'es';
const t = useTranslations(lang);
const currentPathname = Astro.url.pathname;

const menu = [
  { title: 'Inicio', path: '/' },
  { title: 'Blog', path: '/es/blog' },
];
const currentPage = 1;
---
<Layout metaTitle={`Talento Para TI | Página 1 | ${site.author}`} includeSidebar={false}>
  <Navbar menu={menu} button="Resume" />
  <main class="mb-10 flex flex-col items-center justify-center md:mb-0 md:h-screen lg:h-auto text-black dark:text-white">
    <SubTitle text="Talento Para TI" />
    <div class="flex flex-col items-center mb-8 w-full max-w-3xl">
      <LangSwitch currentLang={lang} currentPathname={currentPathname} />
    </div>
    <RssFeedDisplay lang={lang} page={currentPage} pageSize={5} />
    <div class="mt-8 text-center">
      <a href="/es/blog" class="text-blue-600 dark:text-blue-400 hover:underline">
        ← Volver al Blog
      </a>
    </div>
  </main>
</Layout>
