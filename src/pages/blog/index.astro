---
import Layout from '@layouts/Layout.astro';
import Navbar from '@components/Navbar.astro';
import LangSwitch from '@components/ui/LangSwitch.astro';
import { getSortedPosts } from '@utils/collectionUtils';
import { site } from '@src/consts';
import { getLangFromUrl, useTranslations } from '@i18n/utils';
import { getCollection } from 'astro:content';
import { formatDate } from '@utils/formatDate';
import RssFeedDisplay from '@components/RssFeedDisplay.astro';
import Pagination from '@components/ui/Pagination.astro';
import SubTitle from '@components/ui/SubTitle.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const currentPathname = Astro.url.pathname;

const blogMenu = [
	{ title: 'Home', path: '/' },
	{ title: 'Blog', path: '/blog' },
];

// Get all posts and paginate them
const allPosts = await getCollection('blog');
const posts = getSortedPosts(allPosts, lang);

// Only show the first 5 posts on the main page
const pageSize = 5;
const displayedPosts = posts.slice(0, pageSize);
const totalPages = Math.ceil(posts.length / pageSize);
---

<Layout metaTitle={`Blog | ${site.author}`} includeSidebar={false}>
	<Navbar menu={blogMenu} button="Resume" />
	<main class="mb-10 flex flex-col items-center justify-center md:mb-0 md:h-screen lg:h-auto text-black dark:text-white">
		<SubTitle text="Blog" />
		<div class="flex flex-col items-center mb-8 w-full max-w-3xl">
			<LangSwitch currentLang={lang} currentPathname={currentPathname} />
		</div>
		<p class="mb-8 max-w-2xl text-center text-gray-600 dark:text-gray-300">
			Welcome to my blog! Here you’ll find articles, tutorials, and thoughts on web development, technology, and more.
		</p>
		<div class="space-y-8 w-full max-w-3xl">
			{
				displayedPosts.map((post) => (
					<article class="border-zinc-200 dark:border-zinc-800 group relative rounded-lg border p-6">
						<h2 class="mb-2 text-2xl font-semibold text-black dark:text-white">
							<a href={`/blog/${post.slug}`} class="hover:text-blue-600 dark:hover:text-blue-400">
								{post.data.title}
							</a>
						</h2>
						<p class="text-gray-600 dark:text-gray-300 mb-4">{post.data.description}</p>
						<div class="flex flex-wrap items-center gap-4 text-sm">
							<time
								datetime={post.data.pubDate.toISOString()}
								class="text-gray-600 dark:text-gray-300"
							>
								{t('blog.publishedOn')} {formatDate(post.data.pubDate, lang)}
							</time>
							<div class="flex flex-wrap gap-2">
								{post.data.tags.map((tag) => (
									<span class="bg-gray-100 text-gray-700 dark:bg-gray-800 dark:text-gray-300 rounded-full px-3 py-1 text-sm">
										#{tag}
									</span>
								))}
							</div>
						</div>
						<a
							href={`/blog/${post.slug}`}
							class="ring-blue-600 dark:ring-offset-zinc-900 absolute inset-0 rounded-lg ring-offset-2 ring-offset-white hover:ring-2"
							aria-label={`Read ${post.data.title}`}
						/>
					</article>
				))
			}
		</div>

		{totalPages > 1 && (
			<Pagination 
				currentPage={1} 
				totalPages={totalPages} 
				baseUrl="/blog/" 
			/>
		)}

		<div class="mt-12">
			<h2 class="mb-8 text-3xl font-bold text-black dark:text-white">
				{lang === 'es' ? 'Últimas entradas de Talento Para TI' : 'Latest from Talento Para TI'}
			</h2>
			<RssFeedDisplay lang={lang} page={1} pageSize={5} />
		</div>
	</main>
</Layout>
