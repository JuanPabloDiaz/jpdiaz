{
	"name": "jpdiaz",
	"author": "Juan Diaz",
	"description": "Portfolio, blog and find_testimonial site of Juan Diaz, a software engineer from Colombia living in Unite States.",
	"version": "0.0.1",
	"homepage": "https://jpdiaz.dev",
	"type": "module",
	"license": "MIT",
	"packageManager": "yarn@1.22.19",
	"scripts": {
		"dev": "astro dev",
		"build": "astro build",
		"preview": "astro preview",
		"deploy:cloudflare": "npx wrangler@latest deploy",
		"preview:cloudflare": "yarn build && npx wrangler@latest dev --local",
		"astro": "astro",
		"test": "playwright test",
		"format": "npx prettier --write \"**/*.{astro,md,json}\"",
		"lint": "npx eslint --ext .js,.ts,.astro .",
		"lint:fix": "npx eslint --ext .js,.ts,.astro . --fix",
		"check": "npx eslint --ext .js,.ts,.astro . && npx prettier --check \"**/*.{astro,md,json}\"",
		"clean": "rm -rf node_modules .astro dist yarn.lock .yarn/cache && yarn install",
		"lighthouse": "npx unlighthouse --site https://jpdiaz.dev",
		"lighthouse:local": "npx unlighthouse --site http://localhost:4321",
		"testimonios": "python3 scripts/find_testimonials_github.py",
		"testimonios:manual": "python3 scripts/fetch_testimonials.py"
	},
	"engines": {
		"node": ">=20.3.0"
	},
	"dependencies": {
		"@fancyapps/ui": "^5.0.36",
		"astro": "^5.8.2",
		"dompurify": "^3.2.5",
		"fuse.js": "^7.1.0",
		"gray-matter": "^4.0.3",
		"mathjax": "^3.2.2",
		"mermaid": "^11.6.0",
		"remixicon": "^4.6.0",
		"swiper": "^11.2.6"
	},
	"devDependencies": {
		"@astrojs/mdx": "^4.3.0",
		"@astrojs/sitemap": "^3.4.1",
		"@astrojs/tailwind": "^6.0.2",
		"@astrojs/ts-plugin": "^1.10.4",
		"@eslint/js": "^9.27.0",
		"@expressive-code/plugin-collapsible-sections": "^0.41.2",
		"@expressive-code/plugin-line-numbers": "^0.41.2",
		"@iconify-json/carbon": "^1.2.8",
		"@iconify-json/codicon": "^1.2.16",
		"@iconify-json/fe": "^1.2.2",
		"@iconify-json/majesticons": "^1.2.2",
		"@iconify-json/simple-icons": "^1.2.29",
		"@playwright/test": "^1.33.0",
		"@tailwindcss/typography": "^0.5.16",
		"@types/node": "^22.15.21",
		"@types/xml2js": "^0.4.14",
		"@typescript-eslint/eslint-plugin": "^8.32.1",
		"@typescript-eslint/parser": "^8.32.1",
		"astro-eslint-parser": "^1.2.2",
		"astro-expressive-code": "^0.41.2",
		"astro-icon": "^1.1.5",
		"astro-navbar": "^2.3.9",
		"astro-seo": "^0.8.4",
		"astro-typewriter": "^1.1.0",
		"eslint": "^9.27.0",
		"eslint-plugin-astro": "^1.3.1",
		"globals": "^16.2.0",
		"hast": "^0.0.2",
		"hastscript": "^9.0.1",
		"mdast": "^2.3.2",
		"mdast-util-directive": "^3.1.0",
		"mdast-util-to-string": "^4.0.0",
		"node-fetch": "^3.3.2",
		"prettier": "^3.5.3",
		"prettier-plugin-astro": "^0.14.1",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"reading-time": "^1.5.0",
		"remark-directive": "^4.0.0",
		"tailwindcss": "3",
		"typescript": "^5.8.3",
